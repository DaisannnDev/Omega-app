{
  "info": {
    "_postman_id": "f8d1f23f-9d1d-4b76-8ef6-omega-collection",
    "name": "Omega Server",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "REST endpoints for Omega chat backend. Use Socket.IO client with events: join_room { roomId, user }, leave_room { roomId, user }, hydrate { roomId, limit? }, send_message { roomId, user, text }."
  },
  "item": [
    {
      "name": "Get Messages",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{BASE_URL}}/api/messages/{{ROOM_ID}}?limit=50",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "messages",
            "{{ROOM_ID}}"
          ],
          "query": [
            {
              "key": "limit",
              "value": "50"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Create Message",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "console.log('Socket.IO events available:');",
              "console.log(' - join_room { roomId, user }');",
              "console.log(' - leave_room { roomId, user }');",
              "console.log(' - hydrate { roomId, limit? }');",
              "console.log(' - send_message { roomId, user, text }');",
              "console.log('Listen for: init_messages (Message[]), new_message (Message), system (type/message)');"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user\": \"alice\",\n  \"text\": \"Hello from Postman\",\n  \"roomId\": \"{{ROOM_ID}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/api/messages",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "messages"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:4000"
    },
    {
      "key": "ROOM_ID",
      "value": "general"
    }
  ]
}
